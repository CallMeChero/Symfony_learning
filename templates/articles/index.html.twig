{% extends 'base.html.twig' %}

{% block title %}Symfony articles{% endblock %}

{% block body %}

    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th> Article title </th>
                    <th> Actions </th>
                </tr>    
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }} </td>
                        <td> <a href="/article/1" class="btn btn-dark">Show</a></td>
                        <td> <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Delete</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles</p>
    {% endif %}

{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}